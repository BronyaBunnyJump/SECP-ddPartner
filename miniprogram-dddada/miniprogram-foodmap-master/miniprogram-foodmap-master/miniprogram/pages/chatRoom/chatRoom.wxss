.page {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
}

.chat-room {
  background-color: #f5f5f5;
  overflow-y: auto;
  height: calc(100vh - 180rpx);
}

.label-form {
  background-color: #ccc; /* 设置灰色背景 */
  border-radius: 12px; /* 设置圆角 */
  padding: 5px; /* 设置内边距 */
  display: flex; /* 使用 flexbox 布局 */
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
  margin-top: 5px;
  max-width: 95%;
}

.label-form text {
  color: #000; /* 设置字体颜色为黑色 */
  font-size: 13px; /* 设置字体大小为14px */
}


.message {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  width: 100%;
}

.timestamp {
  font-size: 24rpx;
  color: #999;
  align-self: center;
}

.self .meta {
  display: flex;
  flex-direction: row-reverse;
  width: 100%;
}

.other .meta {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.self .avatar {
  margin-right: 20rpx;
  width: 50px;
  height: 50px;
  border-radius: 50%;
}

.other .avatar {
  margin-left: 20rpx;
  width: 50px;
  height: 50px;
  border-radius: 50%;
}

.self .nicknameAndcontent-container {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  max-width: 70%;
}

.other .nicknameAndcontent-container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  max-width: 70%;
}

.self .nickname {
  font-size: 14px;
  color: #333;
  margin-right: 30rpx;
}

.other .nickname {
  font-size: 14px;
  color: #333;
  margin-left: 30rpx;
}

.content {
  margin-bottom: 5rpx;
}

.self .message-content {
  background-color: #9eea6a;
  padding: 15rpx 20rpx;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-right: 30rpx;
  word-wrap: break-word;
  display: inline-block;
  width: fit-content;
  max-width: 100%;
}

.other .message-content {
  background-color: #ffffff;
  padding: 15rpx 20rpx;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-left: 30rpx;
  word-wrap: break-word;
  display: inline-block;
  width: fit-content;
  max-width: 100%;
}

.input-container {
  /* 设置输入区域在页面底部 */
  position: absolute;
  height: 13%;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
}

.input {
  flex: 1;
  padding: 10rpx;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.send-button {
  padding: 0rpx 20rpx;
  font-size: 14px;
  border: none;
  background-color: #9eea6a;
  color: #333;
  border-radius: 10rpx;
}