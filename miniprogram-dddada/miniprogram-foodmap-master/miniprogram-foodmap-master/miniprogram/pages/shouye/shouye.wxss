/* pages/shouye/shouye.wxss */
.container {
  padding: 20rpx;
}

.background {
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, #68c8e7, #ffffff, #68c8e7); /* 青-白-青渐变 */
  position: fixed; /* 固定定位 */
  top: 0;
  left: 0;
  z-index: -1;
}

.search-input {
  flex: 1px;
  padding: 5px 10px;
  font-size: 16px;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  box-sizing: content-box;
  background-color: #fff; /* 白色背景 */
  color: rgb(0, 0, 0); /* 黑色字体 */
}

.title-container {
  display: flex; /* 使用 flexbox 布局 */
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
}

.listTitle {
  background: none; /* 透明背景 */
  font-size: 24px; /* 字体大小为16px */
  font-weight: bold;
  margin-bottom: 20rpx;
  color:#ffffff;
}

.activity-list {
  display: grid; /* 使用网格布局 */
  grid-template-columns: repeat(auto-fill, minmax(45%, 1fr)); /* 列数自适应，每列宽度最小45%，最大1fr */
  grid-gap: 20rpx; /* 网格间距 */
}

.activity-card {
  padding: 20rpx;
  border: 2px solid #3c8cff;
  border-radius: 10px;
  box-sizing: border-box;
  overflow: hidden;
  background-color: #ffffff;
  max-height: 1000rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #3c8cff;
  margin-bottom: 10rpx;
  white-space: normal;
  word-wrap: break-word;
  margin-bottom: 20rpx;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 5px;
  margin-bottom: 20rpx;
}

.tag-container {
  display: flex;
  align-items: center; /* 让子元素垂直居中 */
  padding:4px 10px;
  background-color: #3c8cff;
  color: #ffffff;
  border-radius: 12px;
}

.tag {
   font-size: 16px;
}

.date {
  color: #3c8cff;
  font-size: 16px;
}

.description {
  color: #3c8cff;
  font-size: 16px;
}
